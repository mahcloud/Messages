# Ignore bundler config
/.bundle

# Ignore the default SQLite database.
/db/*.sqlite3

# Ignore all logfiles and tempfiles.
/log/*.log
/tmp

# Ignore simplecov test coverage output
coverage

# Ignore VCR cassettes
spec/fixtures/vcr_cassettes/*.yml
features/fixtures/cassettes
!spec/fixtures/vcr_cassettes/gsa_*

reports

# Ignore yml files
config/*.yml

# But, don't ignore sample.yml files ;)
!config/*.sample.yml

# Ignore development "cdn"
public/cdn

.DS_Store